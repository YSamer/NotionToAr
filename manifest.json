{
    "manifest_version": 3,
    "name": "Notion RTL",
    "version": "1.0",
    "description": "Switch between RTL and LTR for Notion.",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png",
            "512": "icons/icon-512.png"
        }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png",
        "512": "icons/icon-512.png"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}